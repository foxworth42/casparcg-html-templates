{
  "name": "casparcg-html-templates",
  "version": "1.0.0",
  "description": "A collection of CasparCG HTML templates",
  "main": "index.js",
  "scripts": {
    "build": "sass --no-source-map src",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "dev-css": "sass --no-source-map --watch src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxworth42/casparcg-html-templates.git"
  },
  "keywords": [
    "CasparCG"
  ],
  "files": [
    "src/**/*.js",
    "!src/**/*.spec.js",
    "src/**/*.css",
    "src/**/*.html"
  ],
  "author": "Ed Walker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foxworth42/casparcg-html-templates/issues"
  },
  "homepage": "https://github.com/foxworth42/casparcg-html-templates#readme",
  "devDependencies": {
    "animate.css": "^4.1.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "sass": "^1.26.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testMatch": [
      "**/src/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "collectCoverage": true
  },
  "lint-staged": {
    "*.{json,css,sass}": [
      "prettier --write"
    ],
    "*.{js}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
